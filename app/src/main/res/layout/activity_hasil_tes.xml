<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bagasriko82.teskepribadian.HasilTesActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hasil Tes"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#0D47A1"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:id="@+id/hasilTes"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasilnya brooo"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textColor="#0D47A1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/hasilTes"
        android:id="@+id/keteranganHasil" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="keterangan"
        android:layout_gravity="center"
        android:layout_below="@id/keteranganHasil"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textAlignment="center"
        android:textSize="13sp"
        android:id="@+id/Keterangan"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#0D47A1"
        android:text="Menu"
        android:id="@+id/tombolMenu"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@id/Keterangan"
        />

</LinearLayout>
